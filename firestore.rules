rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Get the authenticated user's profile
    function belongsToOrg(orgId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.orgId == orgId;
    }

    // USERS Collection
    match /users/{userId} {
      // Allow any authenticated user to read/write profiles (Unblocking setup)
      allow read, write: if request.auth != null;
    }

    // ORGANIZATIONS Collection
    match /organizations/{orgId} {
      // Valid users can read their own org
      allow read: if request.auth != null && belongsToOrg(orgId);
      // Allow creation of new organizations by anyone authenticated
      allow create: if request.auth != null;
      // Allow updates by anyone authenticated (Unblocking setup)
      allow update: if request.auth != null;
    }

    // ASSETS Collection (Polymorphic)
    match /assets/{assetId} {
      // Read: Must belong to same Org
      allow read: if request.auth != null && belongsToOrg(resource.data.orgId);
      
      // Create: Must assign to own Org
      allow create: if request.auth != null && belongsToOrg(request.resource.data.orgId);
      
      // Update: Must maintain own Org and not change it
      allow update: if request.auth != null 
                    && belongsToOrg(resource.data.orgId)
                    && request.resource.data.orgId == resource.data.orgId;
                    
      // Delete: Must belong to same Org
      allow delete: if request.auth != null && belongsToOrg(resource.data.orgId);
    }

    // LOGS Collection
    match /logs/{logId} {
      allow read: if request.auth != null && belongsToOrg(resource.data.orgId);
      // Logs are usually created by backend or strict client logic. 
      // For now, allow create if matches org.
      allow create: if request.auth != null && belongsToOrg(request.resource.data.orgId);
    }
  }
}