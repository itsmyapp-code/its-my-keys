rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    
    // Get the authenticated user's profile data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user belongs to the organization
    function belongsToOrg(orgId) {
      let userData = getUserData();
      return userData.orgId == orgId;
    }

    // Check if user is an Admin of the organization
    function isOrgAdmin(orgId) {
      let userData = getUserData();
      return userData.orgId == orgId && (userData.role == 'ORG_ADMIN' || userData.role == 'SUPER_ADMIN');
    }

    // --- Collections ---

    // USERS Collection
    match /users/{userId} {
      // Allow any authenticated user to read/write their OWN profile (Unblocking setup)
      allow read, write: if request.auth != null;
    }

    // ORGANIZATIONS Collection
    match /organizations/{orgId} {
      // Members can read their org
      allow read: if request.auth != null && belongsToOrg(orgId);
      // Only authenticated users can create (initially)
      allow create: if request.auth != null;
      // Only Admins can update their org details
      allow update: if request.auth != null && isOrgAdmin(orgId);
    }

    // ASSETS Collection (Polymorphic)
    match /assets/{assetId} {
      // Read: Must belong to same Org
      allow read: if request.auth != null && belongsToOrg(resource.data.orgId);
      
      // Create: Must assign to own Org
      allow create: if request.auth != null && belongsToOrg(request.resource.data.orgId);
      
      // Update: Must maintain own Org. Members can update (check-in/out), but maybe restrict sensitive fields later.
      allow update: if request.auth != null 
                    && belongsToOrg(resource.data.orgId)
                    && request.resource.data.orgId == resource.data.orgId;
                    
      // Delete: Only Admins can delete assets
      allow delete: if request.auth != null && isOrgAdmin(resource.data.orgId);
    }

    // LOGS Collection
    match /logs/{logId} {
      allow read: if request.auth != null && belongsToOrg(resource.data.orgId);
      allow create: if request.auth != null && belongsToOrg(request.resource.data.orgId);
    }
  }
}